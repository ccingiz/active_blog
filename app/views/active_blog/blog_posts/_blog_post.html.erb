<div class="active_blog entry" itemscope itemtype="http://schema.org/BlogPosting">
  <h6>
    <meta itemprop="datePublished" content="<%= schema_date(blog_post.published_at) %>">
    <%= blog_post.published_at.strftime("%B %e %G") %>
    <% if blog_post.new_record? %>
      <a href="" itemscope itemprop="url">∞</a>
    <% else %>
      <a href="<%= active_blog_post_path(blog_post.cached_slug) %>" itemscope itemprop="url">∞</a>
    <% end %>
  </h6>
  <h2>
    <span class="active_blog title" itemprop="headline"><%= blog_post.title %></span>
  </h2>

  <div class="active_blog body" itemprop="articleBody">
    <%= markdown(blog_post.body || "") %>
  </div>
</div>
<hr/>